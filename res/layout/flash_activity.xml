<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/section_padding" >

    <LinearLayout
        android:id="@+id/policy_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button 
            android:text="@string/flash_now" 
            android:id="@+id/button_flash_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

        <Button 
            android:text="@string/add_zip" 
            android:id="@+id/button_add_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

        <Button 
            android:text="@string/clear_queue" 
            android:id="@+id/button_clear_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="?android:attr/listDivider" />
        
    </LinearLayout>

    <com.beerbong.gooupdater.widget.TouchInterceptor
        android:id="@+id/file_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.beerbong.gooupdater.widget.TouchInterceptor>

</LinearLayout>